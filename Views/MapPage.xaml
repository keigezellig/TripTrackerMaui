<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             xmlns:markerMap="clr-namespace:MauiApp1.Controls.MarkerMap"
             x:Class="MauiApp1.Views.MapPage"
             Title="Map">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <markerMap:MarkerMapView MarkerCollectionSource="{Binding MarkerCollection}"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0"  
                    HorizontalOptions="CenterAndExpand"
                    Text="Add set" Command="{Binding AddSetCommand}" />
            <Button Grid.Column="1" 
                    HorizontalOptions="CenterAndExpand"
                    Text="Add marker to set" Command="{Binding AddMarkerToSetCommand}" />
            <Button Grid.Column="2" 
                    HorizontalOptions="CenterAndExpand"
                    Text="Remove marker from set" Command="{Binding RemoveMarkerFromSetCommand}" />
            <Button Grid.Column="3" 
                    HorizontalOptions="CenterAndExpand"
                    Text="Change a marker value" Command="{Binding ChangeMarkerCommand}" />
            <Button Grid.Column="4" 
                    HorizontalOptions="CenterAndExpand"
                    Text="Remove set" Command="{Binding RemoveSetCommand}" />
        </Grid>
        

    </Grid>
    
   
    
</ContentPage>